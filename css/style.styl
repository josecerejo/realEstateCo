@import 'vendor/font-awesome.css'
@import 'vendor/shadowbox.css'
@import nib
@import theusual
@import colors

global-reset()

*
	box-sizing border-box
font(size = 100%)
	font-family sans-serif
	font-weight 100
	color text
	font-style none
	font-size size
	
