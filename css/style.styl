/* Matt Wood NYC */

@import 'vendor/font-awesome.css'
@import 'vendor/shadowbox.css'
@import nib
@import theusual
@import colors


global-reset()

font(size = 100%)
	// font-family sans-serif
	// font-weight 300
	color text
	font-style none
	font-size size
	
.wrapper
	width 90%
	margin 0 auto
	max-width 800px
	position relative

grid(col = 3)
	column-count col
	column-gap 2%
	li
		padding 10px 0
		img
			max-width 100%

body
	font(16px)
	min-width 480px
	line-height 1.66em


header
	text-align center
	padding 30px 0 0
	h1
		display block
		margin 0 auto
		a
			width 7em
			display block
			margin 0 auto
			img
				max-width 100%
	nav
		table()
		margin 20px 0
		ul
			menu()
			a
				padding 2em

.marquee
	margin 2em 0
	h2
		font(120%)
		line-height 1.66em

.clients,
.press
	grid()
	text-align center
	margin 40px auto
	width 80%


.clients
	text-align left
	li
		text-align center
		padding 20px 0 


#galleria
	width: 100%
	max-width 800px
	height: 400px
	background #fff
	margin 0 auto

h2
	text-align center
	margin 80px 0 40px
	font-style uppercase
	font-size 24px
	// font-style italic

footer.wrapper
	text-align center
	margin 60px auto


.contactus
	grid(2)
	text-align center

@media (max-width: 640px)
	h2
		margin 60px 0 40px
	.marquee
		h2
			margin 0
	header
		nav
			display block
			ul
				grid(2)
				li
					margin 0
					padding 0
					display block
					a
						display inline
						padding 0
	.press,
	.clients
		grid(2)
		margin 40px auto
		width 100%
		font-size 20px