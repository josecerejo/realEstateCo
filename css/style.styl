grid(col = 3)
	column-count col
	column-gap 2%
	li
		padding 10px 0
		img
			max-width 100%


box()
	box-sizing border-box 

body
	background navy
	font()
	width 100%
	color white

.wrapper
	margin 2em
	box-sizing border-box
	position relative
	clearfix()
	height 100%
.bigleft,
.bigright
	box()
	min-height 600px
	width 50%
